[user]
  name = Anton Ovchinnikov
  email = anton@tonyo.info
[color]
  ui = auto
[push]
  default = simple
[core]
  editor = vim
  excludesfile = ~/.gitignore
[alias]
  glog = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h    %C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) - %C(dim white)%an%C(reset)%C(bold yellow)%d%C(reset)' --all
  hist = log --pretty=format:\"%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(red)|%C(reset) %s %C(bold blue)[%an]%C(reset)%C(yellow)%d%C(reset)\" --graph --decorate --date=short
  co = checkout
[stash]
  showPatch = true
[log]
  decorate = full
[pull]
  ff = only
[branch]
  # Show most recent branches on top
  sort = -committerdate
